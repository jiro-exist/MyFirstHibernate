<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  

<hibernate-mapping>
	<class name="com.exist.manio.myfirsthibernate.core.model.Roles" table="roles">
		<meta attribute="class-description">
			This class contains the types of contacts.
		</meta>
		<id name="role" column="role" type="string"/>
		<property name="roleDesc" column="role_desc" type="string"/>

		<set name="personSet" table="person_roles" inverse="true" lazy="true" fetch="select" cascade="all">
			<key>
				<column name="role" not-null="true" />
			</key>
			<many-to-many entity-name="com.exist.manio.myfirsthibernate.core.model.Person">
				<column name="person_id" not-null="true"/>
			</many-to-many>
		</set>

	</class>
</hibernate-mapping>