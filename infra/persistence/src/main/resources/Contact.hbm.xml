<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>
   <class name="com.exist.manio.myfirsthibernate.core.model.Person" table="person">
      <meta attribute="class-description">
         This class contains the Person's contact details.
      </meta>
      <id name="id" type="int" column="id">
         <generator class="identity"/>
      </id>
      <property name="contactCode" column="contact_code" type="string"/>
      <property name="contactValue" column="contact_value" type="string"/>
   </class>
</hibernate-mapping>