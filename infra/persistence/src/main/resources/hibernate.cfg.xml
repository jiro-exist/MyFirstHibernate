<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
   <session-factory>        
         <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/hibernate_ex</property>
        <property name="hibernate.connection.username">jirotest</property>
        <property name="hibernate.connection.password">12345</property>
 
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
 
        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <property name="hibernate.current_session_context_class">thread</property>

         <!-- List of XML mapping files -->
        <!-- <mapping resource="Person.hbm.xml"/>
        <mapping resource="Address.hbm.xml"/>
        <mapping resource="Contact.hbm.xml"/>
        <mapping resource="ContactType.hbm.xml"/>
        <mapping resource="Roles.hbm.xml"/> -->

</session-factory>
</hibernate-configuration>